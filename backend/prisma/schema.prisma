generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String   @id @default(cuid())
  email            String   @unique
  username         String   @unique
  passwordHash     String
  chipBalance      Int      @default(500)
  lastWeeklyCredit DateTime @default(now())
  avatarData       String?  @db.Text
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Relations
  gameSessions      GameSessionParticipant[]
  hostedGames       GameSession[]            @relation("GameHost")
  transfersSent     ChipTransfer[]           @relation("TransferSender")
  transfersReceived ChipTransfer[]           @relation("TransferReceiver")
  refreshTokens     RefreshToken[]
  achievements      UserAchievement[]

  @@index([username])
  @@index([chipBalance])
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
}

model GameSession {
  id        String   @id @default(cuid())
  name      String?
  joinCode  String   @unique
  hostId    String
  date      DateTime
  notes     String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  host         User                    @relation("GameHost", fields: [hostId], references: [id])
  participants GameSessionParticipant[]

  @@index([joinCode])
  @@index([hostId])
  @@index([date])
  @@index([isActive])
}

model GameSessionParticipant {
  id               String    @id @default(cuid())
  userId           String
  gameSessionId    String
  buyIn            Int       @default(0)
  cashOut          Int       @default(0)
  netResult        Int       @default(0)
  joinedAt         DateTime  @default(now())
  cashedOutAt      DateTime? // null = still playing, set = cashed out early
  leaveRequestedAt DateTime? // null = not requested, set = wants to leave

  // Relations
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  gameSession GameSession @relation(fields: [gameSessionId], references: [id], onDelete: Cascade)

  @@unique([userId, gameSessionId])
  @@index([userId])
  @@index([gameSessionId])
}

model ChipTransfer {
  id         String         @id @default(cuid())
  senderId   String
  receiverId String
  amount     Int
  note       String?
  status     TransferStatus @default(COMPLETED)
  createdAt  DateTime       @default(now())

  // Relations
  sender   User @relation("TransferSender", fields: [senderId], references: [id])
  receiver User @relation("TransferReceiver", fields: [receiverId], references: [id])

  @@index([senderId])
  @@index([receiverId])
  @@index([createdAt])
}

enum TransferStatus {
  PENDING
  COMPLETED
  CANCELLED
}

// Achievement System
model Achievement {
  id          String              @id @default(cuid())
  key         String              @unique
  name        String
  description String
  category    AchievementCategory
  tier        AchievementTier     @default(BRONZE)
  threshold   Int
  icon        String
  sortOrder   Int                 @default(0)

  userAchievements UserAchievement[]

  @@index([category])
}

model UserAchievement {
  id            String   @id @default(cuid())
  userId        String
  achievementId String
  unlockedAt    DateTime @default(now())
  notified      Boolean  @default(false)

  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  achievement Achievement @relation(fields: [achievementId], references: [id], onDelete: Cascade)

  @@unique([userId, achievementId])
  @@index([userId])
}

enum AchievementCategory {
  GAMES
  WINNINGS
  TRANSFERS
  SPECIAL
}

enum AchievementTier {
  BRONZE
  SILVER
  GOLD
  PLATINUM
}
